
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ===================================================================
    // START: FINAL, SECURE, AND RELIABLE RULE
    // ===================================================================
    match /confidential-kb/{allPaths=**} {
      // Allow read access only to authenticated users who are whitelisted
      // AND have accepted the NDA. This is checked via custom claims.
      allow read: if request.auth != null && 
                     request.auth.token.whitelisted == true && 
                     request.auth.token.ndaAccepted == true;

      // Write access remains disabled for client-side security.
      allow write: if false;
    }
    // ===================================================================
    // END: FINAL RULE
    // ===================================================================


    // --- Other rules remain unchanged --- 

    match /projects/{projectId}/documents/{documentId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /profile_pictures/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null &&
                      request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }

    match /company_logos/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null &&
                      request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }
  }
}
